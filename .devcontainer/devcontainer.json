{
    "name": "db",
    "build": {
        "dockerfile": "${localWorkspaceFolder}/docker/Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "mhutchie.git-graph",
                "donjayamanne.githistory",
                "eamodio.gitlens",
                "ms-azuretools.vscode-docker",
                "redhat.vscode-yaml"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "files.watcherExclude": {
                    "**/pgdata/**": true
                }
            }
        }
    },
    "workspaceFolder": "/workspace",
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/.devcontainer/git/.ssh,target=/root/.ssh,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/.devcontainer/git/.gitconfig,target=/root/.gitconfig,type=bind,consistency=cached"
    ],
    // ğŸ’» ãƒªã‚½ãƒ¼ã‚¹åˆ¶é™ãƒ»ãƒãƒ¼ãƒˆãƒ•ã‚©ãƒ¯ãƒ¼ãƒ‰ãƒ»ç’°å¢ƒå¤‰æ•°
    "runArgs": [
        "--memory=2g",
        "--cpus=2", "-p",
        "5432:5432",
        "--env-file", ".devcontainer/.env"
    ],
    // ğŸ”¥ Dockerfile ã® CMD ["postgres"] ã‚’ç„¡è¦–ã—ãªã„ã‚ˆã†ã«ã™ã‚‹
    "overrideCommand": false
}
